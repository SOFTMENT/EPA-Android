<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="#fff"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.application.epa.Fragments.PostFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/back"
            />
    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ecommercedev"
            />
        <TextView
            android:id="@+id/categoriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/edit_product"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sfprosemibold"
            android:textColor="#040404"
            />


        <EditText

            android:background="@drawable/transparent_back"
            android:layout_marginTop="25dp"
            android:maxLength="50"
            android:id="@+id/p_title"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/sfprosemibold2"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textCursorDrawable="@null"
            android:hint="Product Title"
            />

        <TextView

            android:lineSpacingExtra="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/give_your_product_a_short_and_clear_title"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:fontFamily="@font/sfpromedium2"
            android:textSize="10sp"
            android:textColor="#03A9F4"
            />
        <EditText
            android:background="@drawable/transparent_back"
            android:layout_marginTop="25dp"
            android:maxLength="749"
            android:id="@+id/p_description"
            android:padding="10dp"
            android:layout_gravity="top|start"
            android:gravity="top|start"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:fontFamily="@font/sfprosemibold2"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textCursorDrawable="@null"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:hint="Product Description"
            />
        <TextView

            android:lineSpacingExtra="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/give_your_product_a_short_and_clear_description"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:fontFamily="@font/sfpromedium2"
            android:textSize="10sp"
            android:textColor="#03A9F4"
            />
        <EditText
            android:background="@drawable/transparent_back"
            android:hint="Product Price (R$)"
            android:layout_marginTop="25dp"
            android:id="@+id/p_price"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/sfprosemibold2"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textCursorDrawable="@null"
            android:maxLength="5"
            />
        <EditText
            android:background="@drawable/transparent_back"
            android:hint="Quantity"
            android:layout_marginTop="25dp"
            android:id="@+id/p_quantity"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/sfprosemibold2"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textCursorDrawable="@null"
            android:maxLength="5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sfprosemibold2"
            android:text="Will you deliver this product?"
            android:textSize="12sp" />

        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/willYouDeliverRadioBtn"
            android:orientation="horizontal"
            >
            <RadioButton
                android:textSize="13sp"
                android:id="@+id/yes_deliver"
                android:textColor="@color/gnt_gray"
                android:buttonTint="@color/salmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="Yes"
                />
            <RadioButton
                android:textSize="13sp"
                android:id="@+id/no_deliver"
                android:textColor="@color/gnt_gray"
                android:layout_marginStart="16dp"
                android:buttonTint="@color/salmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="No"
                />
        </RadioGroup>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/sameDayLL"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="Can you deliver on the same day?"
                android:textSize="13sp" />

            <RadioGroup
                android:id="@+id/canYouDeliverOnSameDayRadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/yes_same_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/salmon"
                    android:fontFamily="@font/sfprosemibold2"
                    android:text="Yes"
                    android:textColor="@color/gnt_gray" />

                <RadioButton
                    android:id="@+id/not_same_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:buttonTint="@color/salmon"
                    android:fontFamily="@font/sfprosemibold2"
                    android:text="No"
                    android:textColor="@color/gnt_gray" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:background="@drawable/edittext_back"
            android:hint="Max Delivery Days"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            android:id="@+id/delivery_day"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/sfprosemibold2"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textCursorDrawable="@null"
            android:maxLength="5"
            />


<!--        <EditText-->
<!--            android:layout_marginTop="25dp"-->
<!--            android:background="@drawable/edittext_back"-->
<!--            android:visibility="gone"-->
<!--            android:hint="Delivery Charge (R$)"-->
<!--            android:id="@+id/delivery_charge"-->
<!--            android:inputType="number"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"-->
<!--            android:fontFamily="@font/sfprosemibold2"-->
<!--            android:textSize="12sp"-->
<!--            android:paddingStart="10dp"-->
<!--            android:paddingEnd="10dp"-->
<!--            android:textCursorDrawable="@null"-->
<!--            android:maxLength="5"-->
<!--            />-->
        <LinearLayout

            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="4dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/transparent_back"
                android:id="@+id/oneImage"
                />
            <LinearLayout
                android:id="@+id/oneLL"

                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/transparent_back"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"
                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"

                    />
            </LinearLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginStart="4dp"

                android:background="@drawable/transparent_back"
                android:id="@+id/twoImage"
                app:riv_corner_radius="4dp"
                />
            <LinearLayout
                android:id="@+id/twoLL"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/transparent_back"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"

                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="4dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginEnd="4dp"

                android:background="@drawable/transparent_back"
                android:id="@+id/threeImage"
                />
            <LinearLayout
                android:id="@+id/threeLL"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/transparent_back"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:lineSpacingExtra="2dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"

                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/transparent_back"
                android:id="@+id/fourImage"
                app:riv_corner_radius="4dp"
                />
            <LinearLayout
                android:id="@+id/fourLL"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/transparent_back"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:textAlignment="center"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"
                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"

                    />
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="20dp"
            android:id="@+id/addProduct"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/transparent_back"
            android:backgroundTint="@color/marsala"
            android:fontFamily="@font/sfpromedium2"
            android:text="@string/update_product"
            android:textColor="#fff"
            android:textSize="13sp" />
    </LinearLayout>
    </RelativeLayout>

</ScrollView>