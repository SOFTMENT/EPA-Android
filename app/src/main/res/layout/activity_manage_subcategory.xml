<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_below="@+id/back"
        android:layout_marginStart="16dp"
        android:id="@+id/subCategoriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/subcategories"
        android:fontFamily="@font/sfprosemibold"
        android:textColor="#040404"
        />
    <TextView
        android:layout_marginTop="3dp"
        android:layout_below="@+id/subCategoriesText"
        android:layout_marginStart="16dp"
        android:id="@+id/cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="Electronic"
        android:fontFamily="@font/sfprosemibold"
        />
    <ImageView

        android:id="@+id/addSubategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginEnd="16dp"
        android:baselineAlignBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/subCategoriesText"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/cat_name"
        android:id="@+id/sub_categories_recyclerview"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>