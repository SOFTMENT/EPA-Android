<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.application.epa.SignInActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/langaugeCard"
        app:cardCornerRadius="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F8F8"
        android:orientation="horizontal"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        >
        <LinearLayout

            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/language"
                />
            <TextView
                android:id="@+id/languageCode"
                android:textColor="#333"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:layout_marginStart="8dp"
                android:text="Pt"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:riv_corner_radius="24dp"
            android:src="@drawable/applogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sfprosemibold"
            android:text="@string/welcome_to_ecde"
            android:textColor="#040404"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sfpromedium2"
            android:lineSpacingExtra="1dp"
            android:text="@string/sell_within_the_app_make_offers_and_nbuy_from_people_you_trust"
            android:textAlignment="center"
            android:textColor="#616161"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/sfpromedium2"
                android:text="@string/if_you_are_new"
                android:textColor="#616161"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/createNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/sfpromedium2"
                android:text="@string/create_new"
                android:textColor="@color/salmon"
                android:textSize="13sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_back"
            android:fontFamily="@font/sfpromedium2"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_back"
            android:fontFamily="@font/sfpromedium2"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="13sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="@string/forgot_password"
                android:textColor="#616161"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/resetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="@string/reset"
                android:textColor="@color/salmon"
                android:textSize="13sp" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/transparent_back"
            android:backgroundTint="@color/marsala"
            android:fontFamily="@font/sfpromedium2"
            android:text="@string/login"
            android:textColor="#fff"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/sfpromedium2"
            android:text="OR"
            android:textSize="13sp"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/google_sign_in"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sfpromedium2"
                android:text="@string/login_with_google"
                android:textSize="12sp"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/facebook_sign_in"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sfpromedium2"
                android:text="@string/login_with_facebook"
                android:textSize="12sp"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/sfpromedium2"
            android:lineSpacingExtra="1dp"
            android:text="@string/by_clicking_on_login_you_are_accepting_our_nterms_amp_conditions"
            android:textAlignment="center"
            android:textColor="#616161"
            android:textSize="12sp" />

    </LinearLayout>



</RelativeLayout>